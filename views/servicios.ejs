<%- include('templates/nav') %>


<main>
    <h2>Servicios</h2>
    <section>
        <% if (servicios.length > 0) { %>
            <% servicios.forEach(({descripcion, servicio, disponible}) => { %>

                <% if (disponible) { %>
                    <article>
                        <h2><%= servicio %></h2>
                        <p><%= descripcion %></p>
                    </article>
                    <% } %>
               
                    
            <% }) %> <% } else { %>
             <p>Servicios no disponibles</p>

        <%}%> 

</main>
<%- include('templates/footer') %>